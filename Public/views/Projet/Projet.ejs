<div class="container-fluid">
  <% Projets.forEach( (project) =>{ %>
    <div id="accordion">
      <ul style="margin-top: 20px; padding-inline-start: 0px;">
        <div class="card">
          <div class="card-header d-flex" id="card-header">
            <div class="flex-grow-1">
              <a class="card-title" data-toggle="collapse" data-target="#item-<%= project._id %>" aria-expanded="true" style="text-decoration: none; cursor: pointer;">
                <h5 class="card-title"><%= project.programRef.name.charAt(0).toUpperCase() + project.programRef.name.slice(1) + "/" + project.name.charAt(0).toUpperCase() + project.name.slice(1) %></h5>
              </a>
            </div>
            <div class="d-flex">
              <form action="/Projet/Delete/<%=project._id%>" method="POST" class="align-self-center">
                <button type="submit" class="fa fa-trash fa-1x" style="margin: 0px 10px; border: none; background-color: rgba(0, 0, 0, 0.0);"> <!-- Delete project button -->
              </form>
            </div>
          </div>
    
          <div class="collapse" id="item-<%= project._id %>" aria-labelledby="card-head" data-parent="#accordion">
            <div class="card-body">
              <div class="container-fluid">
                <div class="row">
                  <div class="col d-flex flex-column"> <!-- First col -->
                    <form action="/Projet/AddSearcher/<%= project._id %>" method="POST">
                      <table class="table table-hover">
                        <thead>
                          <tr>
                            <th>Ajouter un chercheur au projet</th>
                          </tr>
                        </thead>

                        <tbody>
                          <td>
                            <div class="d-flex flex-column">
                              <div class="justify-content-between">
                                <label for="email"> Adresse email :</label>
                                <input type="email" name="email" placeholder="email@example.com"> <!-- input field -->
                                <input class="btn btn-sm btn-success" type="submit" value = "Ajouter"> <!-- add searcher button -->
                                <!-- invisible program id field -->
                              </div>
                            </div>
                          </td>
                        </tbody>
                      </table>
                    </form>
                  </div>
                  <div class="col d-flex flex-column"> <!-- Second col -->
                    <table class="table table-hover">
                      <!-- Table head -->
                      <thead>
                          <th>Chercheurs participant Ã  ce projet</th>
                      </thead>
                      
                      <!-- Table body -->
                      <tbody>
                        <!-- Create a new row which display searcher name for each searcher in searchers of a project -->
                        <% project.searchers.forEach(searcher => { %>
                            <tr class="d-flex">
                              <td><%- searcher.name.charAt(0).toUpperCase() + searcher.name.slice(1) %></td>
                              <td><%- searcher.email %></td>
                            </tr>
                        <% } ) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </ul>
    </div>
  <% } ) %>
</div>