  <div class="container-fluid">
    <% Programmes.forEach( (Pro) =>{%>
    <div id="accordion">

      <ul style="margin-top: 20px; padding-inline-start: 0px;">
        <div class="card">
          <div class="card-header d-flex" id="card-header">
            <div class="flex-grow-1">
              <a class="card-title" data-toggle="collapse" data-target="#item-<%= Pro._id %>" aria-expanded="true" style="text-decoration: none; cursor: pointer;">
                <h5 class="card-title"><%= Pro.name %></h5>
              </a>
            </div>
            <div class="d-flex">
              <form action="/Programmes/delete/<%=Pro._id %>" method="POST" class="align-self-center">
                <button type="submit" class="fa fa-trash fa-1x" style="margin: 0px 10px; border: none; background-color: rgba(0, 0, 0, 0.0);"> <!-- Delete program button -->
              </form>
            </div>
          </div>
    
          <div class="collapse" id="item-<%= Pro._id %>"  aria-labelledby="card-head" data-parent="#accordion">
            <div class="card-body">
              <div class="container-fluid">
                <div class="row">
                    <div class="col d-flex flex-column"> <!-- First col -->
                      <form action="/Programmes/AddSearcher/<%=Pro._id %>" method="POST">
                        <table class="table table-hover">
                          <thead>
                            <tr>
                              <th>Ajouter un chercheur au programme</th>
                            </tr>
                          </thead>

                          <tbody>
                            <td>
                              <div class="d-flex flex-column">
                                <div class="justify-content-between">
                                  <label for="email"> Adresse email :</label>
                                  <input type="email" name="email" placeholder="email@example.com"> <!-- input field -->
                                  <input class="btn btn-sm btn-success" type="submit" value = "Ajouter"> <!-- add searcher button -->
                                  <!-- invisible program id field -->
                                </div>
                              </div>
                            </td>
                          </tbody>
                        </table>
                      </form>

                      <a href="Projet/Create/<%=Pro._id %> "> <button>Add Programe</button></a>
                    </div>
                    <div class="col"> <!-- Second col -->
                      <table class="table table-hover">
                        <!-- Table head -->
                        <thead>
                          <tr>
                          <th class="th-lg">Chercheurs participant a ce programme</th>
                        </tr>
                        </thead>
                        
                        <!-- Table body -->
                        <tbody>
                          <!-- Create a new row which display searcher name for each searcher in searchers of a program -->
                          <% Pro.searchers.forEach(searcher => { %>
                            <tr>
                              <td><%- searcher.name.charAt(0).toUpperCase() + searcher.name.slice(1) %></td>
                            </tr>
                          <% } ) %>
                        </tbody>
                      </table>
                    </div>
                    <div class="col"> <!-- Third col -->
                      <table class="table table-hover">
                        <!--Table head-->
                        <thead>
                          <tr>
                            <th class="th-lg"><a>Projets</a></th>
                            <th class="th-lg"><a>Chercheurs</a></th>
                            <th class="th-lg"><a>Date de fin du projet</a></th>
                          </tr>
                        </thead>
                        <!--Table head-->
            
                        <!--Table body-->
                        <tbody>  
                          <% Pro.searchers.forEach( searcher =>{ %>
                            <tr>
                              <td>**Nom du projet**</td>
                              
                              <td>
                                <ul style="list-style: none; padding-inline-start: 0px;">
                                  <% Pro.searchers.forEach( searcher =>{ %>
                                    <li><%- searcher.name.charAt(0).toUpperCase() + searcher.name.slice(1) %></li>
                                  <% } ) %>
                                </ul>
                              </td>
                              <td>**Project dead-line**</td>
                            </tr>
                          <% } ) %>
                        </tbody>
                      </table>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </ul>
    </div>
  <% } ) %>
  </div>